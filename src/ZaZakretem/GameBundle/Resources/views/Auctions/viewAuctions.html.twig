{% extends "::main.html.twig" %}

{% block main_content_wrapped %}
    <section class="panel">
        <header class="panel-heading">
            {{ 'Available cars'|trans }}
        </header>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'Brand'|trans }}</th>
                <th>{{ 'Model'|trans }}</th>
                <th>{{ 'Year'|trans }}</th>
                <th>{{ 'Price'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for car in cars %}
            <tr>
                <td>{{ car.brand.name }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.modelYear }}</td>
                <td>{{ car.price }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('show_car', {'carId': car.id}) }}">
                        <span class="icon_search"></span>
                        {{ 'Show car'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}

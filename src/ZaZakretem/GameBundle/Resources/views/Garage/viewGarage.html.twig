{% extends "::main.html.twig" %}

{% block main_content_wrapped %}
    <section class="panel">
        <header class="panel-heading">
            {{ 'Your cars'|trans }}
        </header>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'Brand'|trans }}</th>
                <th>{{ 'Model'|trans }}</th>
                <th>{{ 'Power'|trans }}</th>
                <th>{{ 'Torque'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.brand.name }}</td>
                    <td>{{ car.modelName }}</td>
                    <td>{{ car.horsepower }}</td>
                    <td>{{ car.torque }}</td>
                    <td>
                        {% if(car.active == false) %}
                        <a class="btn btn-primary btn-sm" href="{{ path('activate_car', {'playerCarId': car.id}) }}">
                            <span class="icon_search"></span>
                            {{ 'Set as active car'|trans }}
                        </a>
                        {% endif %}
                    </td>
                    <td>
                            <a class="btn btn-sm" href="{{ path('show_car', {'carId': car.id}) }}">
                                <span class="icon_search"></span>
                                {{ 'Show car'|trans }}
                            </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
